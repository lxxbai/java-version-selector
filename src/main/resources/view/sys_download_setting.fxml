<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import io.github.lxxbai.jvs.component.SvgButton?>
<?import javafx.geometry.HPos?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane vgap="20" hgap="20" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="io.github.lxxbai.jvs.control.SysDownloadSettingsControl">
    <Label text="并行数" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="parallelDownloadsComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="下载到" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="jdkSavePathField" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"/>
    <SvgButton svgPath="svg/edit.svg" onAction="#chooseDownloadDirectory" svgTooltip="选择文件夹"
               GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Label text="安装到" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="jdkInstallPathField" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>
    <SvgButton svgPath="svg/edit.svg" onAction="#chooseJdkDirectory" svgTooltip="选择文件夹"
               GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <JFXCheckBox fx:id="defaultPathCheckBox" GridPane.columnIndex="0" GridPane.rowIndex="3"
                 GridPane.columnSpan="2">设为默认路径
    </JFXCheckBox>
    <BorderPane.margin>
        <Insets left="50"/>
    </BorderPane.margin>
    <GridPane.halignment>
        <HPos fx:constant="LEFT"/>
    </GridPane.halignment>
</GridPane>
