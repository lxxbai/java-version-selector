<?xml version="1.0" encoding="UTF-8"?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXDialogLayout?>
<?import io.github.lxxbai.jvs.component.SvgButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<JFXDialogLayout xmlns:fx="http://javafx.com/fxml/1"
                 fx:controller="io.github.lxxbai.jvs.controller.DownloadSettingsController" prefWidth="300">
    <heading>
        <Label fx:id="headLabel">设置下载路径</Label>
    </heading>
    <body>
        <GridPane vgap="15" hgap="10">
            <Label text="下载到:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="jdkSavePathField" GridPane.columnIndex="1" GridPane.rowIndex="0" wrapText="false"
                   GridPane.hgrow="ALWAYS"/>
            <SvgButton svgPath="svg/edit.svg" onAction="#chooseDownloadDirectory" svgTooltip="选择文件夹"
                       GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label text="安装到:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="jdkInstallPathField" GridPane.columnIndex="1" GridPane.rowIndex="1" wrapText="false"/>
            <SvgButton svgPath="svg/edit.svg" onAction="#chooseJdkDirectory" svgTooltip="选择文件夹"
                       GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <JFXCheckBox fx:id="defaultPathCheckBox" GridPane.columnIndex="0" GridPane.rowIndex="2"
                         GridPane.columnSpan="2">设为默认路径
            </JFXCheckBox>
        </GridPane>
    </body>
</JFXDialogLayout>